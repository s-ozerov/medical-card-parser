                </AnchorPane>
            </VBox>
            <VBox prefHeight="87.0" prefWidth="253.0">
                <children>
                    <AnchorPane prefHeight="200.0" prefWidth="200.0">
                        <children>
                            <Button fx:id="exitButton" alignment="CENTER" cancelButton="true"
                                    contentDisplay="CENTER" layoutX="40.0" layoutY="22.0"
                                    mnemonicParsing="false" onAction="#exit" prefHeight="30.0" prefWidth="130.0"
                                    text="Выйти">
                                <font>
                                    <Font size="18.0"/>
                                </font>
                            </Button>
                        </children>
                    </AnchorPane>
                </children>
            </VBox>
        </HBox>
    </VBox>
</HBox>
