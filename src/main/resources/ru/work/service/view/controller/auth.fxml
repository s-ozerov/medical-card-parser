    <VBox prefHeight="200.0" prefWidth="502.0">
        <Label alignment="CENTER" prefHeight="88.0" prefWidth="502.0" text="Добро пожаловать" textFill="#b6e1ff"
               textOverrun="CLIP">
            <font>
                <Font name="System Bold Italic" size="30.0"/>
